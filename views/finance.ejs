<!DOCTYPE html>
<html lang="en">

<head>


    <%- include('./partials/head.ejs')%>
</head>

<body>
    <%- include('./partials/header.ejs')%>

    <main class="main">

        <h1>Finance</h1>
        <div class="grid-2-21">
            <div>
                <section class="finance-summary">
                    <div>Revenues: <span>₦<%= revenue.toFixed(2) %></span></div>
                    <% if (deposit>0){%>
                    <div>Deposit: <span>₦<%= deposit.toFixed(2) %></span></div>
                    <%}%>
                    <% if (refund>0){%>
                    <div>Refunds: <span>₦<%= refund.toFixed(2) %></span></div>
                    <%}%>
                </section>
                <section class="withdrawal-summary bold">
                    <header class="bold"> <i class="fa fa-bar-chart"></i>Withdrwals</header>
                    <div>
                        No Withdrwals yet
                    </div>
                </section>
            </div>
            <section class="finance-controlers">
                <div>
                    <a href="/dashboard/finance/withdraw" class="button font16">Request Withdrwal</a>
                </div>
                <div>
                    <a href="/dashboard/finance/transactions" class="trans-hist button font16">Transaction History</a>
                </div>
            </section>
        </div>

    </main>
    <%- include('./partials/footer.ejs')%>
</body>

</html>