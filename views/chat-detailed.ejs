<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs')%>
</head>

<body>
    <%- include('./partials/header.ejs')%>
    <main class="main">
        <section>
            <div class="flex-between border-bottom  padd10 bg-white">
                <div>
                    <i class="fa fa-circle font15"></i>
                    <span class="bold font15">Mith</span>
                </div>
                <div>
                    <i class="fa fa-angle-double-left bold font15 "></i>
                    <a href="/dashboard/inbox" class="font15">Back</a>

                </div>
            </div>
            <% chats.forEach(chat=>{ %>
            <% if(chat.from===loggedUser){%>

            <div class="flex-end">


                <div class="padd10 message-sent font13 ">
                    <!-- <div>
                        <%= chat.from[0].toUpperCase()%>
                    </div> -->
                    <div>

                        <!-- <div class="padd10-bottom">
                            <span>
                                her
                            </span>
                            <span>Active Now</span>
                        </div> -->
                        <div class="padd20-bottom">
                            <%= chat.message%>
                        </div>
                        <div class="flex-end font10"><%= chat.createdAt %></div>
                    </div>
                </div>
            </div>

            <%}else{%>
            <div class="flex-start">
                <div class="padd10 message-received font13">
                    <!-- <div>
                        B

                    </div> -->
                    <div>

                        <!-- <div class="padd10-bottom">
                            <span>
                                Me
                            </span>
                            <span>Active Now</span>
                        </div> -->
                        <div class="padd20-bottom">
                            <%= chat.message%>
                        </div>
                        <div class="flex-end font10"><%= chat.createdAt %></div>
                    </div>
                </div>
            </div>
            <%}%>

            <%})%>


        </section>

    </main>

    <%- include('./partials/footer.ejs')%>
</body>

</html>