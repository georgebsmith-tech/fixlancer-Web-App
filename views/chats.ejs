<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs")%>
</head>

<body>
    <%- include("./partials/header.ejs")%>
    <main class="main">
        <section class="font16 bg-white border-smooth">
            <div class="padd30 border-bottom">All conversations</div>
            <ul>
                <% for(let conversation of theConversations ){ %>

                <l class="font15">
                    <a href="" class="block inbox-summary border-bottom">
                        <div class="grid">
                            <div>
                                <span><%= conversation.from[0].toUpperCase() %></span>
                            </div>
                            <div>
                                <span class="bold block desktop">Smith123</span>
                                <% if(conversation.from===loggedUser){ %>
                                <span class="who bold">Me</span>
                                <%}else{%>
                                <span class="who bold"><%= conversation.from %></span>
                                <%}%>
                                <span><%= conversation.message%></span>
                            </div>
                        </div>
                        <div class="flex-end"><%= conversation.createdAt %></div>
                    </a>
                    </li>
                    <%}%>
            </ul>
        </section>
    </main>



    <%- include("./partials/footer.ejs")%>
</body>

</html>